{
  "name": "@faiz-ui/{{uiName}}",
  "version": "1.0.0",
  "description": "{{description}}",
  "keywords": [
    "{{uiName}}"
  ],
  "author": "multiway",
  "license": "MIT",
  "main": "src/index.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "directory": "packages/{{outDir}}/{{uiName}}"
  },
  "scripts": {
    "build": "tsup src --dts",
    "build:fast": "tsup src",
    "dev": "pnpm build:fast -- --watch",
    "clean": "rimraf dist .turbo",
    "typecheck": "tsc --noEmit",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "dependencies": {
    "@faiz-ui/system": "workspace:*"
  },
  "devDependencies": {
    "clean-package": "2.2.0",
    "react": "^18.0.0"
  }
}
